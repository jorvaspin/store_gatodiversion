{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "www",
      // "baseUrl": "types",
      "typeRoots": [
        "./node_modules/@types",
        "resources/@types"
      ],
      // "types": [
      //   "webpack-env"
      // ],
      "paths": {
        "@/*": [
          "resources/*"
        ],
        "@views/*": [
          "resources/views/*"
        ],
        "@components/*": [
          "resources/components/*"
        ],
        "@assets/*": [
          "resources/assets/*"
        ],
        "@animations/*": [
          "resources/assets/animations/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "resources",
      "resources/**/*.ts",
      "resources/**/*.tsx",
      "resources/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }
